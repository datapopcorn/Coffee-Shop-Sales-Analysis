PYTHON := python

# è¨­å®šè…³æœ¬è·¯å¾‘
TRUNCATE_SCRIPT := truncate_all_tables.py
LOAD_SCRIPT := load_sample_data.py

# é è¨­ç›®æ¨™
.PHONY: help
help:
	@echo "Available commands:"
	@echo "  make truncate - truncate all tables"
	@echo "  make load     - load sample data"
	@echo "  make reset    - truncate all tables and load sample data"
	@echo "  make help     - show this help"

# truncate all tables
.PHONY: truncate
truncate:
	@echo "ğŸ—‘ï¸ truncate all tables..."
	@$(PYTHON) $(TRUNCATE_SCRIPT)

# è¼‰å…¥ç¯„ä¾‹è³‡æ–™
.PHONY: load
load:
	@echo "ğŸ“¥ load sample data..."
	@$(PYTHON) $(LOAD_SCRIPT)

# é‡ç½®è³‡æ–™ï¼ˆæ¸…ç©ºå¾Œé‡æ–°è¼‰å…¥ï¼‰
.PHONY: reset
reset:
	@echo "ğŸ”„ reset database..."
	@$(PYTHON) $(TRUNCATE_SCRIPT)
	@echo "\n"
	@$(PYTHON) $(LOAD_SCRIPT)
